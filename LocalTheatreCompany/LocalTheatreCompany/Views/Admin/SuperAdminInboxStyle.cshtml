@model IEnumerable<LocalTheatreCompany.Models.Stylize>

@{
    ViewBag.Title = "Super Admin In boxStyle";
}

<h2>SuperAdminInboxStyle</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BackGroundColour)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Font)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsApproved)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequestTime)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.BackGroundColour)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Font)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.RequestTime)
    </td>
    <td>

        @Html.ActionLink("Allow", "AllowStyle", new { StyleId = item.StyleId }) |

        @Html.ActionLink("Delete", "DeleteStyleRequest", new { StyleId = item.StyleId })

    </td>
</tr>
}

</table>
